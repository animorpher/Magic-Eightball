// Allow user to submit name between quotation marks
var userName = prompt('Enter your name');

//Display userName if it's entered

if (userName) {
    console.log(`Hello, ${userName}!`);
}

// Value of userQuestion should be a string that user defines as question
let userQuestion = prompt('What is your question?');

// Log the question with the user name
console.log(userQuestion);

// generate random # between 0 and 7
var randomNumber = Math.floor(Math.random() * 8)

// create eightBall variable
let eightBall = ' '
console.log (eightBall)

// Step 7
if (randomNumber === 0) {
    eightBall = 'It is certain'
} else if (randomNumber === 1) {
    eightBall = 'It is decidedly so'
}  else if (randomNumber === 2) {
    eightBall = 'Reply hazy try again'
} else if (randomNumber === 3) {
    eightBall = 'Cant predict now'
} else if (randomNumber === 4) {
    eightBall = 'Do not count on it'
} else if (randomNumber === 5) {
    eightBall ='My sources say no'
} else if (randomNumber === 6) {
    eightBall ='Outlook not so good'
} else if (randomNumber === 7) {
    eightBall ='Signs point to yes'
}
console.log(eightBall)
